public class Main {

    private static Object lock = new Object();
    private static boolean flag = true; 
    
	public static void main(String[] args) {
		new Thread(new OddPrint(flag, lock)).start();
		new Thread(new EvenPrint(flag, lock)).start();
	}
}

    class OddPrint implements Runnable {

        private boolean flag;
        private Object lock = null;

        public OddPrint(boolean flag, Object lock) {
            this.lock = lock;
            this.flag = flag;
        }

        public void run() {

            for (int i = 1; i <= 99; i = i + 2) {
                synchronized (lock) {
                    while (!flag) {
                        try {
                            lock.wait();
                        } catch (InterruptedException e) {
                            System.out.println("Error in Thread 1: "
                                    + e.getMessage());
                        }
                    }
                    System.out.println("Thread 1: The number is '" + i + "'");
                    flag = false;
                    lock.notifyAll();
                }

            }
        }
    }
 
    class EvenPrint implements Runnable {

        private Object lock = null;
        private boolean flag; 

        public EvenPrint(boolean flag, Object lock) {
            this.lock = lock;
            this.flag = flag;
        }

        public void run() {

            for (int i = 2; i <= 100; i = i + 2) {
                synchronized (lock) {
                    while (flag) {
                        try {
                            lock.wait();
                        } catch (InterruptedException e) {
                            System.out.println("Error in Thread 2: "
                                    + e.getMessage());
                        }
                    }
                    System.out.println("Thread 2: The number is '" + i + "'");
                    flag = true;
                    lock.notifyAll();
                }

            }
        }

    } 
